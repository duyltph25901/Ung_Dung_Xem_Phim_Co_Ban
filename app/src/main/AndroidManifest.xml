<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appmovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".class_supported.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppMovie"
        tools:targetApi="31">
        <activity
            android:theme="@style/FullScreen"
            android:name=".view.view_viewer.activity.ActorActivity"
            android:exported="true" />
        <activity
            android:name=".view.view_viewer.activity.AnimatedActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_viewer.activity.HorrorActivity"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_viewer.activity.SciActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_viewer.activity.ActionActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_viewer.activity.AllMovieActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_viewer.activity.WebViewActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_viewer.activity.ExpandActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_viewer.activity.HomeViewerActivity"
            android:exported="true"
            android:theme="@style/FullScreen">

        </activity>
        <activity
            android:name=".view.view_ad.activities.MovieActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_ad.activities.ActorsActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_ad.activities.DirectorsActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".view.view_ad.activities.HomeAdActivity"
            android:exported="true"
            android:theme="@style/FullScreen"/>
        <activity
            android:name=".boarding.BoardingActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".login_signup.SignUpActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".login_signup.LoginActivity"
            android:exported="true"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".broad_cast.MyBroadCast" />
    </application>

</manifest>