<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BBBBBB"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_clear"
            app:tint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imgClearDialogUpdateMovie"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgClearDialogUpdateMovie"
            app:layout_constraintBottom_toTopOf="@id/btnUpdateMovie">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_input_ad"
                    android:layout_marginBottom="20dp">
                    <EditText
                        android:id="@+id/inputLinkTrailerMovieUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Link trailer movie"
                        android:background="@null"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_input_ad"
                    android:layout_marginBottom="20dp">
                    <EditText
                        android:id="@+id/inputLinkMovieUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Link movie"
                        android:background="@null"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_input_ad"
                    android:layout_marginBottom="20dp">
                    <EditText
                        android:id="@+id/inputMovienameUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Movie name"
                        android:background="@null"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_input_ad"
                    android:layout_marginBottom="20dp">
                    <EditText
                        android:id="@+id/inputLimitAgeUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Limit age"
                        android:background="@null"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="number"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_input_ad"
                    android:layout_marginBottom="20dp">
                    <EditText
                        android:id="@+id/inputPointUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Point"
                        android:background="@null"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/imgClearDialogUpdateMovie"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnUpdateMovie"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>