<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.view_ad.fragment.DirectorsFragment"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert Director"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgDirector"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/img_no_img"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"/>
            <Button
                android:id="@+id/btnChooseImageDirector"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_btn_login"
                android:text="Choose image"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_input_ad">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_fill"
                app:tint="#06C149" />
            <EditText
                android:id="@+id/inputFullNameDirector"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@null"
                android:hint="Director name"
                android:textSize="18sp"
                android:inputType="text"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:textColorHint="#06C149"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_input_ad"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_calendar"
                app:tint="#06C149" />
            <TextView
                android:id="@+id/txtDateOfBirthDirector"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Date of birth"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColorHint="#06C149"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_input_ad"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_location"
                app:tint="#06C149" />
            <AutoCompleteTextView
                android:id="@+id/inputCountriesDirector"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Countries"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@null"
                android:textColorHint="#06C149"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtDisplayCountriesNameDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:hint="Countries"
            android:textStyle="bold"
            android:textColor="#06C149"
            android:textColorHint="#06C149"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_input_ad"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_gender"
                app:tint="#06C149" />
            <RadioGroup
                android:id="@+id/radioGroupGenderDirector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioMaleDirector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#06C149"
                    android:layout_marginEnd="20dp"/>
                <RadioButton
                    android:id="@+id/radioFemaleDirector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#06C149"/>
                <RadioButton
                    android:id="@+id/radioOtherDirector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#06C149"
                    android:layout_marginStart="20dp"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_input_ad"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_fill"
                app:tint="#06C149" />
            <EditText
                android:id="@+id/inputStoryDirector"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@null"
                android:hint="Story"
                android:textSize="18sp"
                android:inputType="text"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:textColorHint="#06C149"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnClearDirector"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/bg_btn_login"
                android:textColor="@color/white"
                android:text="Clear"
                android:textAllCaps="false"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btnInsertDirector"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/bg_btn_login"
                android:textColor="@color/white"
                android:text="Insert"
                android:textAllCaps="false"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>